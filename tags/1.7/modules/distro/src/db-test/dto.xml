				</column>

				<column name="sblob_type">
					<type max-length="500">byte[]</type>
				</column>

				<column name="serializable_type">
					<type max-length="500">Serializable</type>
				</column>

				<column name="dto_type">
					<type max-length="500" class="table:dto_dto">Serializable</type>
				</column>

			</columns>
