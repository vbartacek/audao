				<column name="long_type">
					<type>long</type>
				</column>

				<column name="double_type">
					<type>double</type>
				</column>

				<column name="enum_type_plain">
					<type>int</type>
					<enum>
						<value>TYPE_A</value>
						<value>TYPE_B</value>
						<value>TYPE_C</value>
						<value>TYPE_D</value>
